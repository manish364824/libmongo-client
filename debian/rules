#!/usr/bin/make -f
# -*- makefile -*-

override_dh_auto_configure:
	dh_testdir
	./autogen.sh
	dh_auto_configure -O-Bbuild-tree -- --enable-shared

override_dh_auto_clean:
	dh_testdir
	dh_auto_clean -O-Bbuild-tree
	find . -name 'Makefile.in' | xargs rm -f
	rm -rf aclocal.m4 config.guess config.sub config.h.in configure \
	       depcomp install-sh ltmain.sh m4 missing

override_dh_auto_install:
	for p in $(shell dh_listpackages); do \
		install -d debian/$$p/usr/share/doc/$$p; \
		install NEWS debian/$$p/usr/share/doc/$$p/; \
	done
	dh_auto_install

%:
	dh $@ -Bbuild-tree --dbg-package=libmongo-client0-dbg
